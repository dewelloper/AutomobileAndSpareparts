@using System.Globalization
@using BusinessObjects
@model otomobilvasitaViewModel
@{
}


@section sideBar{

}

<div class="container">

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-offset-12 panel leftfloating">
            <div class="row">
                <div class="col-md-offset-0">
                    <div id="sparepartsPage" style="display:none;">
                        @*@{Html.RenderAction("_SearchProductSpareparts", "otomobilvasita");}*@
                    </div>
                    <div id="vhiclePage" style="display:none;">
                        @{Html.RenderAction("_SearchProductVhicle", "otomobilvasita");}
                    </div>
                </div>
            </div>
            <div id="indexPage">
                <div class="indexPanel">
                        <h1 id="contentTitle">Otomobil Vitrini</h1>
                    <div id="showcaseContainer1">
                        <br />
                        @foreach (var t in Model.products.Where(k => k.ProductType == 1).OrderByDescending(m => m.Id))
                        {
                            <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2">
                                <a skiplinktext="Skip Menu" data-original-title="@t.Name" title="@t.Name" data-toggle="tooltip" data-placement="top" href="@Url.Action("aracozellikleri", "otomobilvasita", new { prdcId = @t.Id, GroupId = @t.GroupId, CategoryId = @t.CategoryId, PriceCurrencyId = @t.PriceCurrencyId, Name = Mvc4WebRole.Controllers.StringHelpers.ToSeoUrl(@t.Name)})">
                                    <div class="litleimgcontainer">
                                        @if (File.Exists(Server.MapPath(t.ImagePath0)))
                                        {
                                            var astring = "thumbnails/otomobililanlari";
                                            var targetPath = @t.ImagePath0.Substring(0, @t.ImagePath0.IndexOf("ProductImages/") + 14).ToString() + astring + @t.ImagePath0.Substring(@t.ImagePath0.IndexOf("ProductImages/") + 14, @t.ImagePath0.ToString().Length - (@t.ImagePath0.IndexOf("ProductImages/") + 14));
                                            var filePath = Request.MapPath(targetPath);
                                            <img skiplinktext="Skip Menu" src=@targetPath class=" img-responsive frontpageimg" alt="@t.Name" width="100" height="81" />
                                        }
                                        else
                                        {
                                            <img skiplinktext="Skip Menu" src="\Images\ProductImages\default.png" class="img-responsive frontPageImg" alt="@t.Name" width="100" height="81" />
                                        }
                                        @if (t.Name.Trim().Length < 17)
                                        {
                                            <small>@t.Name</small>
                                        }
                                        else
                                        {
                                            <small>@t.Name.Substring(0, 17) ...</small>
                                        }
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="clearfix"></div>
                    <div class="panel-heading primary">Vitrindeki Yedek Parçalar</div>
                    <div id="showcaseContainer2" class="row indexPanel">
                        @foreach (var t in Model.products.Where(k => k.ProductType == 2))
                        {
                            <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2">
                                <div class="litleimgcontainer">
                                    <a skiplinktext="Skip Menu"  data-original-title="@t.Name" data-toggle="tooltip" data-placement="top" href="@Url.Action("aracozellikleri", "otomobilvasita", new { prdcId = @t.Id, GroupId = @t.GroupId, CategoryId = @t.CategoryId, PriceCurrencyId = @t.PriceCurrencyId, Name = Mvc4WebRole.Controllers.StringHelpers.ToSeoUrl(@t.Name), Code = @t.Code })">
                                        @if (File.Exists(Server.MapPath(t.ImagePath0)))
                                        {
                                            var astring = "thumbnails/otomobililanlari";
                                            var targetPath = @t.ImagePath0.Substring(0, @t.ImagePath0.IndexOf("ProductImages/") + 14).ToString() + astring + @t.ImagePath0.Substring(@t.ImagePath0.IndexOf("ProductImages/") + 14, @t.ImagePath0.ToString().Length - (@t.ImagePath0.IndexOf("ProductImages/") + 14));
                                            var filePath = Request.MapPath(targetPath);
                                            <img skiplinktext="Skip Menu" src=@targetPath class="img-responsive frontPageImg" alt="@t.Name" width="100" height="81" />
                                        }
                                        else
                                        {
                                            <img skiplinktext="Skip Menu" src="\Images\ProductImages\default.png" class="img-responsive frontPageImg" alt="@t.Name" width="100" height="81" />
                                        }
                                        @if (t.Name.Trim().Length < 17)
                                        {
                                            <small>@t.Name</small>
                                        }
                                        else
                                        {
                                            <small>@t.Name.Substring(0, 17) ...</small>
                                        }
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <br />
                <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2" style="display:none;">
                    <ul class="nav-markalist nav nav-tabs  " role="tablist">
                        <li class="col-xs-4 col-sm-4 col-md-4 col-lg-4"><a href="#otomobiller" aria-controls="otomobiller" role="tab" data-toggle="tab">Otomobiller</a></li>
                        <li class="col-xs-4 col-sm-4 col-md-4 col-lg-4"><a href="#motosikletler" aria-controls="motosikletler" role="tab" data-toggle="tab">Motosikletler</a></li>
                        <li class="col-xs-4 col-sm-4 col-md-4 col-lg-4"><a href="#kamyonlar" aria-controls="kamyonlar" role="tab" data-toggle="tab">Kamyön, Van, Büs ve Jip'ler</a></li>
                    </ul>
