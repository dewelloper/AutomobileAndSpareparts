                                    <li>
                                        <img src="~/Images/elanor.jpg" alt="Silider Item3" />
                                    </li>
                                </ul>
                            </div>
                        </div>*@

                    <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2">
                        <div class="form-group">
                            <input class="form-control" id="searchinput" type="search" placeholder="Bir marka yazýn...">
                        </div>
                        <div role="tabpanel" class="tab-pane active" id="otomobiller">
                            <ul class="list-group">
                                @{int ind = 0;}

                                @foreach (var t in Model.listCatG.Where(k => k.ParentId == 1))
                                {
                                    if (ind++ % 15 == 0)
                                    {
                                        @Html.Raw("")
                                    }

                                    @Html.Raw("<li class='list-group-item'>")
                                    @Html.ActionLink(t.Name, "SearchProductVehicle", "otomobilvasita", new { CatagoryId = t.ParentId.ToString(), MarkId = t.Id.ToString() }, new { @class = "", title = "Otomobil Markalarý" })
                                    @Html.Raw("</li>")
                                    if (ind % 15 == 0)
                                    {
                                        @Html.Raw("")}
                                }
                            </ul>
                        </div>

                        <div role="tabpanel" class="tab-pane" id="motosikletler">
                            <ul class="list-group">
                                @foreach (var t in Model.listCatG.Where(k => k.ParentId == 2))
                                {
                                    if (ind++ % 12 == 0)
                                    {
                                        @Html.Raw("")
                                    }

                                    @Html.Raw("<li class='list-group-item'>")
                                    @Html.ActionLink(t.Name, "3", "otomobilvasita", new { CatagoryId = t.ParentId.ToString(), MarkId = t.Id.ToString() }, new { @class = "", title = "Motosiklet Markalarý" })
                                    @Html.Raw("</li>")
                                    if (ind % 12 == 0)
                                    {
                                        @Html.Raw("")}
                                }
                            </ul>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="kamyonlar">
                            <ul class="list-group">
                                @foreach (var t in Model.listCatG.Where(k => k.ParentId == 2 || k.ParentId == 3 || k.ParentId == 4 || k.ParentId == 5 || k.ParentId == 6))
                                {
                                    if (ind++ % 12 == 0)
                                    {
                                        @Html.Raw("")
                                    }

                                    @Html.Raw("<li class='list-group-item'>")
                                    @Html.ActionLink(t.Name, "SearchProductVehicle", "otomobilvasita", new { CatagoryId = t.ParentId.ToString(), MarkId = t.Id.ToString() }, new { @class = "", title = "Minivan Panelvan Kamyön Markalarý" })
                                    @Html.Raw("</li>")
                                    if (ind % 12 == 0)
                                    {
                                        @Html.Raw("")}
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



