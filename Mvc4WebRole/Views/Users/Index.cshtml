@model IEnumerable<BusinessObjects.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table role="presentation">
    <tbody>
        <tr>
            <th></th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                ModifierDate
            </th>
            <th>
                RegistererDate
            </th>
            <th>
                IsActive
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Password
                </td>
                <td>
                    @String.Format("{0:g}", item.ModifierDate)
                </td>
                <td>
                    @String.Format("{0:g}", item.RegistererDate)
                </td>
                <td>
                    @item.IsActive
                </td>
            </tr>
        }
    </tbody>
</table>


